---
import { LanguageSwitch } from './LanguageSwitch';

const currentPath = Astro.url.pathname;
---

<nav class="navbar-glass fixed top-0 left-0 right-0 z-50 rounded-b-3xl">
  <div class="navbar-content max-w-[900px] mx-auto flex justify-between items-center px-6 py-4">
    <a href="/" class="navbar-logo flex items-center gap-3 no-underline transition-colors hover:opacity-80">
      <img src="/img/Logo aperca oscuro.svg" alt="Logo Aperca" class="h-10 w-auto object-contain">
      <div class="flex flex-col">
        <span class="text-2xl lowercase text-[#222] leading-none" style="font-family: Impact, 'Arial Black', 'Arial Narrow Bold', sans-serif; font-weight: 900;">aperca</span>
        <span class="text-xs font-['Poppins'] text-[#666] mt-0.5">Jorge Cabrera UX</span>
      </div>
    </a>
    
    <div class="navbar-hamburger hidden flex-col justify-center items-center w-8 h-8 cursor-pointer ml-4" id="navbar-hamburger" role="button" aria-label="Toggle navigation" aria-expanded="false">
      <span class="block w-6 h-[3px] bg-[#222] my-1 rounded-sm transition-all"></span>
      <span class="block w-6 h-[3px] bg-[#222] my-1 rounded-sm transition-all"></span>
      <span class="block w-6 h-[3px] bg-[#222] my-1 rounded-sm transition-all"></span>
    </div>
    
    <div class="navbar-links flex items-center gap-0" id="navbar-links">
      <a 
        href="/" 
        class={`nav-link bg-transparent border-none font-semibold font-['Poppins'] ml-6 cursor-pointer transition-colors pb-0.5 no-underline ${currentPath === '/' ? 'text-[#b80000]' : 'text-[#111] hover:text-[#b80000]'}`}
        data-i18n="nav-home"
      >
        Inicio
      </a>
      <a 
        href="/mi-perfil" 
        class={`nav-link bg-transparent border-none font-semibold font-['Poppins'] ml-6 cursor-pointer transition-colors pb-0.5 no-underline ${currentPath === '/mi-perfil' ? 'text-[#b80000]' : 'text-[#111] hover:text-[#b80000]'}`}
        data-i18n="nav-profile"
      >
        Mi Perfil
      </a>
      <div class="relative ml-6 group">
        <button 
          class={`nav-link bg-transparent border-none font-semibold font-['Poppins'] cursor-pointer transition-colors pb-0.5 no-underline flex items-center gap-1 ${currentPath.includes('/proyectos') ? 'text-[#b80000]' : 'text-[#111] group-hover:text-[#b80000]'}`}
          data-i18n="nav-cases"
        >
          Casos de Éxito
          <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div class="dropdown-menu absolute top-full left-0 mt-2 w-56 bg-white rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 overflow-hidden border border-neutral-200">
          <a 
            href="/proyectos/menuclick"
            class="block px-4 py-3 text-[#111] hover:bg-[#f5f5f5] hover:text-[#DC2626] transition-colors font-['Poppins'] text-sm"
          >
            <div class="font-semibold">MenuClick</div>
            <div class="text-xs text-neutral-500 mt-0.5">E-commerce sin Comisiones</div>
          </a>
          <a 
            href="/proyectos/importadora-dr"
            class="block px-4 py-3 text-[#111] hover:bg-[#f5f5f5] hover:text-[#b80000] transition-colors font-['Poppins'] text-sm border-t border-neutral-100"
          >
            <div class="font-semibold">Importadora D&R</div>
            <div class="text-xs text-neutral-500 mt-0.5">Sistema ERP de Inventario</div>
          </a>
        </div>
      </div>
      <a 
        href="/#contacto" 
        class="nav-link bg-transparent border-none font-semibold font-['Poppins'] ml-6 cursor-pointer transition-colors pb-0.5 no-underline text-[#111] hover:text-[#b80000]"
        data-i18n="nav-contact"
      >
        Contacto
      </a>
      <div class="ml-6">
        <LanguageSwitch client:load />
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.getElementById('navbar-hamburger');
    const navLinks = document.getElementById('navbar-links');

    if (hamburger && navLinks) {
      hamburger.addEventListener('click', () => {
        const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
        hamburger.setAttribute('aria-expanded', String(!isExpanded));
        navLinks.classList.toggle('open');
      });

      // Solo links directos, no el botón dropdown
      const links = navLinks.querySelectorAll('a.nav-link');
      links.forEach(link => {
        link.addEventListener('click', () => {
          if (navLinks.classList.contains('open')) {
            navLinks.classList.remove('open');
            hamburger.setAttribute('aria-expanded', 'false');
          }
        });
      });
    }

    // Manejo del dropdown en móvil
    const dropdownButton = document.querySelector('.group button');
    const dropdownMenu = document.querySelector('.dropdown-menu');
    
    if (dropdownButton && dropdownMenu) {
      dropdownButton.addEventListener('click', (e) => {
        if (window.innerWidth <= 900) {
          e.preventDefault();
          e.stopPropagation();
          dropdownMenu.classList.toggle('dropdown-mobile-open');
        }
      });
      
      // Cerrar menú móvil cuando se hace click en un item del dropdown
      const dropdownLinks = dropdownMenu.querySelectorAll('a');
      dropdownLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (navLinks && navLinks.classList.contains('open')) {
            navLinks.classList.remove('open');
            if (hamburger) {
              hamburger.setAttribute('aria-expanded', 'false');
            }
          }
        });
      });
    }

    // Sistema de traducción para navbar
    const navTranslations = {
      es: {
        'nav-home': 'Inicio',
        'nav-profile': 'Mi Perfil',
        'nav-cases': 'Casos de Éxito',
        'nav-contact': 'Contacto'
      },
      en: {
        'nav-home': 'Home',
        'nav-profile': 'My Profile',
        'nav-cases': 'Success Stories',
        'nav-contact': 'Contact'
      }
    };

    function applyNavTranslations(locale: string) {
      const t = navTranslations[locale as 'es' | 'en'] || navTranslations.es;
      
      document.querySelectorAll('[data-i18n]').forEach(element => {
        const key = element.getAttribute('data-i18n');
        if (key && t[key as keyof typeof t]) {
          element.textContent = t[key as keyof typeof t];
        }
      });
    }

    // Aplicar traducciones al cargar
    const savedLocale = localStorage.getItem('locale') || 'es';
    applyNavTranslations(savedLocale);

    // Escuchar cambios de idioma
    window.addEventListener('localeChanged', (event: Event) => {
      const customEvent = event as CustomEvent<string>;
      applyNavTranslations(customEvent.detail);
    });
  });
</script>

<style>
  @media (max-width: 900px) {
    .navbar-hamburger {
      display: flex !important;
    }

    .navbar-links {
      position: absolute;
      top: 60px;
      left: 50%;
      transform: translateX(-50%);
      background: #fff;
      box-shadow: 0 4px 24px rgba(0,0,0,0.08);
      border-radius: 12px;
      padding: 16px 0;
      display: none;
      flex-direction: column;
      align-items: center;
      width: 90vw;
      max-width: 280px;
      z-index: 200;
    }

    .navbar-links.open {
      display: flex !important;
    }

    .navbar-links .nav-link {
      margin: 8px 0 !important;
      font-size: 1.1em;
      margin-left: 0 !important;
      width: 100%;
      text-align: center;
      padding: 8px 16px;
    }

    /* Dropdown en móvil */
    .navbar-links .group {
      width: 100%;
      margin-left: 0 !important;
    }

    .navbar-links .group button {
      width: 100%;
      text-align: center;
      justify-content: center;
      margin: 8px 0;
      font-size: 1.1em;
      padding: 8px 16px;
    }

    .dropdown-menu {
      position: static !important;
      margin-top: 0 !important;
      width: 100% !important;
      opacity: 0 !important;
      max-height: 0;
      overflow: hidden;
      transition: all 0.3s ease;
      box-shadow: none;
      border: none;
      background: transparent;
      visibility: hidden !important;
    }

    .dropdown-menu.dropdown-mobile-open {
      opacity: 1 !important;
      max-height: 200px;
      visibility: visible !important;
    }

    .dropdown-menu a {
      background: #f5f5f5;
      border-radius: 8px;
      margin: 4px 8px;
    }
  }
</style>
